// Import ObjectId from @prisma/client
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  role          Role      @default(GUEST)
  password      String
  token         String?
  refresh_token String?
  picture       String
  description   String
  nickname      String?   @unique
  Listing       Listing[]
}

enum Role {
  ADMIN
  GUEST
  HOST
}

model Listing {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  location    Location @relation(fields: [locationId], references: [id])
  locationId  String
  host        User     @relation(fields: [userId], references: [id])
  hostId      String
  latitude    Float
  longitude   Float
  userId      String
}

model Booking {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  guestId      String
  checkInDate  DateTime
  checkOutDate DateTime
  totalCost    Float
  listingId    String
  status       String
  userId       String
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int
  text      String
  createdAt DateTime @default(now())
  authorId  String
  bookingId String
}

model Location {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  address  String
  city     String
  state    String
  zip      String
  listings Listing[]
}

model Account {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
}
