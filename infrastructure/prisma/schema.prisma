generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @map("_id")
  email         String    @unique
  name          String
  role          Role      @default(GUEST)
  password      String
  token         String?
  refresh_token String?
  picture       String
  description   String
  nickname      String?   @unique
  listings      Listing[] // A user can have many listings
}

enum Role {
  ADMIN
  GUEST
  HOST
}

model Listing {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  host        User     @relation(fields: [hostId], references: [id])
  hostId      String
  latitude    Float
  longitude   Float
}

model Booking {
  id           String   @id @map("_id")
  guestId      String
  checkInDate  DateTime
  checkOutDate DateTime
  totalCost    Float
  listingId    String
  status       String
}

model Review {
  id         String   @id @map("_id")
  rating     Int
  text       String
  createdAt  DateTime @default(now())
  authorId   String
  targetId   String
  targetType String
  bookingId  String
}

model Location {
  id       Int       @id @default(autoincrement())
  address  String
  city     String
  state    String
  zip      String
  listings Listing[] // Add this line to create the back relation
}
