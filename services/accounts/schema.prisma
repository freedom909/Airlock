generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL") 
}

model Account {
  id         String   @id @map("_id")
  createdAt  DateTime @default(now())
  email      String   @unique
  userId     String   // Reference to the User model
}

model User {
  id            String    @id @map("_id")
  email         String    @unique
  name          String
  role          Role      @default(GUEST)
  password      String
  token         String?
  refresh_token String?
  picture       String
  description   String
  nickname      String?   @unique
}

enum Role {
  ADMIN
  GUEST
  HOST
}

model Listing {
  id          String   @id @map("_id")
  title       String
  description String
  price       Float
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  host        User     @relation(fields: [hostId], references: [id])
  hostId      String
  latitude    Float
  longitude   Float
  userId      String
}