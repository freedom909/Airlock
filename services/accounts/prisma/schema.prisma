model User {
  id           String    @id @map("_id")
  email        String    @unique
  name         String   
  role         ROLE      @default(GUEST)
  password     String
  token        String?
  refresh_token String?
  picture      String
  description  String
  nickname     String?   @unique
  listings     Listing[] // A user can have many listings
}

enum ROLE {
  ADMIN
  GUEST
  HOST
}

model Listing {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  price       Float
  location    Location  @relation(fields: [locationId], references: [id])
  locationId  Int
  host        User      @relation(fields: [hostId], references: [id])
  hostId      String
}
